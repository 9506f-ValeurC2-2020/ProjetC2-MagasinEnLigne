<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/all_round_gothic_w01_medium</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/all_round_gothic_w01_medium</item>
    </style>

    <style name="BottomNavigationActiveTextAppearance" parent="BottomNavigationTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="BottomNavigationInactiveTextAppearance" parent="BottomNavigationTextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyRadioButton" parent="BottomNavigationTextAppearance">
        <item name="buttonTint">@color/tint_selector</item>
        <item name="android:textColor">@color/tint_selector</item>

    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>