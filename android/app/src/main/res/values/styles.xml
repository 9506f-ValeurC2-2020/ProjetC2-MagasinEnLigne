<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/all_round_gothic_w01_medium</item>
    </style>

    <style name="BottomNavigationActiveTextAppearance" parent="BottomNavigationTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="BottomNavigationInactiveTextAppearance" parent="BottomNavigationTextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>